<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>All our flats</h1>



<div id="flats" class="row">
  <% @flats.each do |flat| %>
  <div class="col-3">
    <div class="card" style="width: 18rem; padding: 1rem;">
        <%= render flat %>
        <p>
          <%= link_to "more info", flat %>
        </p>
    </div>
    <br>
  </div>
  <% end %>
</div>

         <h4 class="fa-solid fa-circle-plus" > <%= link_to "Make a new flat", new_flat_path %> </h4>

</div>
